body
    background-color #f6f6f6
    font-size: 16px
    margin 0px

.box 
    background-color #ffffff
    border-radius 8px
    border 1px solid #d6d6d6
    position absolute
    width 500px
    .btn-success
        background-color #00acff
        border 0
        width 100%
    .form-control
        &:focus
        &:active
            outline none 
            box-shadow none
    .inside 
        padding 16px
    .header
        background-color #00acff /* #E85722; */
        border-radius 8px 8px 0px 0px
        padding 8px
        a 
            img 
                display block
                margin 0px auto
                width 40%
    .footer 
        text-align center
        a
            display inline-block
            font-size .8em
            &:last-child
                margin-left 24px

.box-login
    left calc(50% - 250px)
    top calc(50% - 220px)

.box-register 
    left calc(50% - 250px)
    top calc(50% - 345px)


.mtop16 
    margin-top 16px

