color1 = #2caaff
color2 = #fdd700
color3 = #334F9A

body
    background-color #f9f9f9
    font-size 14px
    font-family: 'Roboto', sans-serif;

a
.btn
    &:active
    &:focus
        box-shadow none 
        outline none 

.mtop16
    margin-top 16px

.mtop32
    margin-top 32px

.form-control
    &:hover
    &:focus
        box-shadow none

nav 
    background-color #fff
    border-bottom 2px solid color1
    .navbar-brand
        img 
            width 120px
    .navbar-nav
        li.nav-item
            a.nav-link
                border 1px solid #ffffff
                border-radius 4px
                color #000000
                font-size 1.1em
                font-weight bold
                margin-right 4px
                padding 5px 16px !important
                &:hover
                    color color3
            a.btn
                border 1px solid color1
                color #000000
                &:hover
                    background-color color2
            ul.dropdown-menu
                border 0px
                border-radius 0x 0px 4px 4px
                top 160% !important
                &:hover
                    background-color #f7f7f7
                a
                    i
                        color color3
        li.link-acc
            overflow hidden
            a
                display inline-block
                float left
                margin-right 0px !important
                &:first-child
                    border-radius 4x 0px 0px 4px
                    border-right 1px solid #ffffff 
                &:last-child
                    border-radius 0x 4px 4px 0px
                img 
                    position relative
                    top -1px
                    margin-right 4px
                    width 32px
        li.link-user
            overflow initial
            a
                border 0px !important
                img 
                    border-radius 50%
                &:hover
                    background-color transparent !important
.wrapper
    .panel
        background-color #fff 
        border-radius 6px
        border-bottom 2px solid #2caaff
        width 100%
        .header
            border-bottom 1px solid #e8e8e8
            h2.title
                display inline-block
                color #19213d
                font-size 1.1em
                margin-bottom 0px
                padding 12px 16px
            ul
                display inline-block
                float right 
                margin-right 12px
                li
                    display inline-block
                    position relative
                    a
                        color #333
                        display inline-block
                        padding 10px
                        &:hover
                            background-color #f6f6f6
                            text-decoration none
                            color #222
                        i 
                            color #2caaff
                    ul
                        background-color #fff
                        border 1px solid #f0f0f0
                        display none
                        float none 
                        position absolute
                        right -16px
                        width 200px
                        li
                            display inline-block
                            border-bottom 1px solid #f0f0f0
                            width 100%
                            &:last-child
                                border-bottom 0px
                            a
                                display block
                                width 
                    &:hover
                        ul
                            display block
                            

        .inside
            padding 16px
            .nav
                .nav-link
                    border 1px solid #2caaff
                    margin-right 8px
                    &:hover
                        background-color #2caaff
                        color #fff 
            .form_search
                display none
                margin-bottom 16px   
                .btn
                    width 100%  
            .big_count
                display block
                font-size 2em
                text-align center
                width 100%  
            .edit_avatar
                a
                    display block
                    margin 0px auto
                    position relative
                    width 140px 
                    .overlay
                        align-items center
                        background-color rgba(0,0,0,.55)
                        border-radius 50%
                        color #FFF
                        display none
                        font-size 2em
                        justify-content center
                        height 140px
                        position absolute
                        width 100%  
                        img 
                            width 60px
                    &:hover
                        .overlay
                            display flex
                img 
                    border-radius 50%
                    display block
                    width 100% 
                .form-control  
                    display none 
        .btn-primary
            background-color color1
            border 0px
            padding 8px 32px
            &:hover
                background-color color3
                color #FFF

    

